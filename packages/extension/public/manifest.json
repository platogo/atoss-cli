{
  "manifest_version": 3,
  "name": "ATOSS CLI Helper",
  "description": "Browser extension to help ATOSS CLI capture cookies and automate data extraction",
  "version": "1.0.0",
  "permissions": [
    "cookies",
    "nativeMessaging"
  ],
  "host_permissions": [
    "https://greentube.atoss.com/*",
    "https://login.microsoftonline.com/*",
    "https://autologon.microsoftazuread-sso.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://greentube.atoss.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://greentube.atoss.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
